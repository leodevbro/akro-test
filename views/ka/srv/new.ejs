<% include ../partials/header.ejs %>

<div class="container">
    <div class="col">
        <h1 style="text-align: center;">Create a new camp</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" max="999">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Submit ttt ttt</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>



